  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "dotenv": "^17.2.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  }
}
