# Contract Addresses
ETHEREUM_ESCROW_FACTORY=0x...
SEPOLIA_ESCROW_FACTORY=0x...
STELLAR_ESCROW_CONTRACT=C...
STELLAR_TESTNET_ESCROW_CONTRACT=C...

# Database
DATABASE_URL=postgresql://localhost/fusion_resolver

# Logging
LOG_LEVEL=info