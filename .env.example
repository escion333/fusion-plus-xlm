# Fusion+ XLM Configuration Template
# ==================================
# Copy this file to .env and fill in your values

# Network Environment
NODE_ENV=mainnet
RESOLVER_CHAINS=ethereum,stellar

# Stellar Configuration
STELLAR_NETWORK=mainnet
STELLAR_HORIZON_URL=https://horizon.stellar.org
STELLAR_SOROBAN_RPC_URL=https://soroban-rpc.mainnet.stellar.gateway.fm
STELLAR_PASSPHRASE="Public Global Stellar Network ; September 2015"
STELLAR_CONTRACT_ID=YOUR_DEPLOYED_CONTRACT_ID
STELLAR_RESOLVER_SECRET=YOUR_STELLAR_SECRET_KEY

# Ethereum Configuration
ETHEREUM_NETWORK=mainnet
ETHEREUM_CHAIN_ID=1
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_ESCROW_FACTORY=0xa7bcb4eac8964306f9e3764f67db6a7af6ddf99a
ETHEREUM_RESOLVER_ADDRESS=YOUR_ETHEREUM_ADDRESS
ETHEREUM_RESOLVER_PRIVATE_KEY=YOUR_ETHEREUM_PRIVATE_KEY

# Resolver Configuration
RESOLVER_ADDRESS=YOUR_RESOLVER_ADDRESS
RESOLVER_PRIVATE_KEY=YOUR_RESOLVER_PRIVATE_KEY
RESOLVER_POLLING_INTERVAL=5000
RESOLVER_POLLING_ENABLED=true

# 1inch API Configuration
ONEINCH_API_KEY=YOUR_1INCH_API_KEY
ONEINCH_API_URL=https://api.1inch.dev/v5.2/1
CHAIN_ID=1

# Service Ports
PORT=3000
PROXY_PORT=3002

# Database (use PostgreSQL for production)
DATABASE_URL=postgresql://user:password@localhost/fusion_resolver

# Logging
LOG_LEVEL=info

# IMPORTANT NOTES:
# 1. Never commit this file with real values
# 2. Get 1inch API key from https://portal.1inch.dev
# 3. Ensure wallets are funded before running resolver
# 4. For testnet, change network URLs and chain IDs accordingly