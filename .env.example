RESOLVER_POLLING_INTERVAL=5000
RESOLVER_POLLING_ENABLED=true
RESOLVER_ADDRESS=0x... # Your resolver address
RESOLVER_PRIVATE_KEY=0x... # Your resolver private key

# Chain RPC URLs
ETHEREUM_RPC_URL=https://eth.llamarpc.com
